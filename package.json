{
  "name": "speakertracker",
  "productName": "SpeakerTracker",
  "description": "An electron app to keep track of speakers during a debate",
  "keywords": [],
  "main": "./build/Main/main.js",
  "version": "1.0.0",
  "author": "warwickmcnaughton",
  "scripts": {
    "start": "cd ./build && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "sqlite3": "latest"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "electron": "18.0.3",
    "eslint": "^8.7.0",
    "source-map-support": "^0.5.21"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/SpeakerTracker48x48.ico",
        "osxSign": {
          "identity": "Developer ID Application: W McNaughton (C4XR3G25JL)",
          "hardened-runtime": true,
          "entitlements": "entitlements.plist",
          "entitlements-inherit": "entitlements.plist",
          "signature-flags": "library"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "speakertracker",
            "icon": "./assets/SpeakerTracker44x44.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "./assets/SpeakerTracker.icns",
            "format": "ULFO"
          }
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.0"
}
